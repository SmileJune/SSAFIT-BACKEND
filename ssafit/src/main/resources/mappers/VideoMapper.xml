<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  <mapper namespace="com.ssafy.ssafit.model.dao.UserDao">

  	<select id="selectUser" resultType="user">
  		SELECT id, nickname, introduce
		FROM user
		WHERE id = #{id}
  	</select>
